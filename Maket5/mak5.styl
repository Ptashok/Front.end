body
  font-family: Arial, sans-serif
  margin: 0
  padding: 0
  background-color: #2c2c2c // Темний фон
  color: #ffffff // Білий текст

.container
  text-align: center
  padding: 20px

.logo
  margin-bottom: 20px

  img
    width: 150px
    height: auto

.slogan
  font-size: 18px
  color: #bbbbbb // Світло-сірий текст

.content-section
  display: flex
  justify-content: center
  gap: 20px
  margin: 30px 0

.content-box
  background-color: #3c3c3c // Темно-сірий фон
  border-radius: 8px
  padding: 20px
  width: 250px

  img
    width: 100%
    border-radius: 8px

  h2
    font-size: 20px
    margin: 10px 0
    color: #ffffff // Білий текст

  p
    font-size: 14px
    color: #cccccc // Світло-сірий текст

.subscribe-section
  margin: 20px 0

  input[type="email"]
    padding: 10px
    border: 1px solid #555555 // Сірий бордер
    border-radius: 4px
    margin-right: 10px
    width: 200px
    background-color: #1c1c1c // Темно-сірий фон
    color: #ffffff // Білий текст

    &::placeholder
      color: #777777 // Світло-сірий текст для плейсхолдера

  button
    padding: 10px
    border: none
    border-radius: 4px
    background-color: #444444 // Темно-сірий фон кнопки
    color: #ffffff // Білий текст
    cursor: pointer

    &:hover
      background-color: #555555 // Світліший відтінок сірого при наведенні

.footer
  background-color: #1c1c1c // Темний фон футера
  padding: 20px

  ul
    list-style: none
    padding: 0
    display: flex
    justify-content: center
    gap: 20px

    li
      color: #cccccc // Світло-сірий текст
      font-size: 14px

      &:hover
        color: #ffffff // Білий текст при наведенні
